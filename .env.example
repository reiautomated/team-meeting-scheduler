# Environment variables for Team Meeting Scheduler
# Use this file as a template and copy it to .env.local for local development

# DATABASE - Get from your database provider (e.g., Vercel Postgres)
DATABASE_URL="YOUR_POSTGRESQL_CONNECTION_STRING"

# AI SERVICES
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# GOOGLE CALENDAR - From a Google Cloud Service Account JSON file
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# EMAIL NOTIFICATIONS - From a transactional email provider (e.g., SendGrid, Mailgun)
SMTP_HOST="YOUR_SMTP_HOST"
SMTP_PORT="587"
SMTP_USER="YOUR_SMTP_USER"
SMTP_PASS="YOUR_SMTP_PASSWORD"

# NEXTAUTH - Used for session security
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="GENERATE_A_RANDOM_STRING_HERE" # e.g., run `openssl rand -hex 32`

# APPLICATION
BASE_URL="http://localhost:3000"
